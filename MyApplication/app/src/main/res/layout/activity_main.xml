<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:text="android.util.Base64.decode invalid base64 encoded string (Case 1)"
        android:textAllCaps="false"
        android:id="@+id/decode_button_case_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="android.util.Base64.decode invalid base64 encoded string (Case 2)"
        android:textAllCaps="false"
        android:id="@+id/decode_button_case_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="java.util.Base64 decode invalid base64 encoded string (Case 3)"
        android:textAllCaps="false"
        android:id="@+id/decode_button_case_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="java.util.Base64.decode invalid base64 encoded string (Case 4)"
        android:textAllCaps="false"
        android:id="@+id/decode_button_case_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Input:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/input_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />

    <TextView
        android:paddingTop="16dp"
        android:id="@+id/output_label_text_view"
        android:text="Output:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/output_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />
</LinearLayout>